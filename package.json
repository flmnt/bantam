{
  "name": "@flmnt/bantam",
  "version": "1.1.2",
  "description": "A micro framework for micro services",
  "engines": {
    "node": ">=12.18.2",
    "npm": ">=6.14.5"
  },
  "main": "./lib/index.js",
  "types": "./lib/Bantam.d.ts",
  "bin": {
    "bantam": "bin/bantam.js"
  },
  "directories": {
    "lib": "lib",
    "bin": "bin",
    "test": "test",
    "example": "example"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "npm-run-all build:*",
    "build:bin": "tsc --project tsconfig.bin.json",
    "build:lib": "tsc --project tsconfig.lib.json",
    "test": "jest --ci",
    "test:watch": "jest --watch",
    "check": "npm-run-all check:*",
    "check:lint": "eslint .",
    "check:prettier": "prettier --check .",
    "fix": "npm-run-all fix:*",
    "fix:lint": "eslint --fix .",
    "fix:prettier": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flmnt/bantam.git"
  },
  "keywords": [
    "nodejs",
    "koa",
    "microservice",
    "typescript"
  ],
  "author": "Matt Davies <matt@filament.so>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flmnt/bantam/issues"
  },
  "homepage": "https://github.com/flmnt/bantam#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "inquirer": "^7.3.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^11.0.2",
    "lodash": "^4.17.21",
    "yargs": "^16.2.0"
  },
  "optionalDependencies": {
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.0.25",
    "node-dev": "^5.0.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.0.25",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.{js,ts,md,json}": "prettier --check"
  }
}
